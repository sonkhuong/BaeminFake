<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.OrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/back_to_main1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="85dp"
                android:text="Thông tin đơn hàng"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:text="Giao hàng đến" />

        <TextView
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:text="Hà Đông"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:text="Hà Nội, Việt Nam" />

        <EditText
            android:id="@+id/add_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_add_24"
            android:hint="Thêm tòa nhà, tầng, số phòng..." />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_6_noti"
            android:paddingLeft="15dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:drawableLeft="@drawable/ic_baseline_bin"
                android:gravity=""
                android:text="Bạn có chắc địa chỉ giao hàng chính xác?"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Chắc chắn địa chỉ giao hàng để có thể nhận hàng chính xác và nhanh nhất nhé!" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Đơn hàng của bạn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/order_img"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/trasua" />

                <TextView
                    android:id="@+id/order_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="0dp"
                    android:text="Item XYZ"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="25dp"
                    android:text="500$"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/order_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="50dp"
                    android:text="Cơm ngon ba ghiền"
                    android:textSize="15sp" />

                <RatingBar
                    android:id="@+id/order_rate"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="75dp" />

                <TextView
                    android:id="@+id/order_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="165dp"
                    android:layout_marginTop="73dp"
                    android:text="(50+)"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="18dp"
                    android:text="Số lượng" />

                <TextView
                    android:id="@+id/giam_sl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/ic_baseline_arrow_left_24" />

                <EditText
                    android:id="@+id/soluong"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/border_6_white"
                    android:gravity="center"
                    android:text="1" />

                <TextView
                    android:id="@+id/tang_sl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/ic_baseline_arrow_right_24" />

                <TextView
                    android:id="@+id/cancel_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/border_10_orange"
                    android:drawableRight="@drawable/ic_baseline_cancel_24"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Cancel" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_6_yellow"
            android:gravity="center"
            android:text="Tiết kiệm 1 tỷ với đơn hàng từ 0 đồng" />

        <EditText
            android:id="@+id/note_for_restaurant"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="#E3DDDD"
            android:drawableLeft="@drawable/ic_baseline_sticky_note_2_24"
            android:gravity="center"
            android:hint="Bấm vào đây nếu bạn muốn nhắn thêm với cửa hàng nhé"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/select_voucher"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/gifbox1"
            android:drawableRight="@drawable/ic_baseline_chevron_right_24"
            android:gravity="center"
            android:text="Select Voucher"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/select_shipping"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_shipped"
            android:drawableRight="@drawable/ic_baseline_chevron_right_24"
            android:gravity="center"
            android:text="Select Shipping"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/total_price"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/border_6_blue"
                android:gravity="center"
                android:text="45.000 đ"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/add_to_cart"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:background="@drawable/border_6_blue"
                android:gravity="center"
                android:text="Thêm vào giỏ"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
