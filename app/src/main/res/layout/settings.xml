<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_text_size"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="0dp"
        android:text="Cỡ chữ"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/text_size"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/text_size"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="100dp"
        android:entries="@array/sizetext"
        app:layout_constraintLeft_toRightOf="@+id/text_text_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_theme"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="0dp"
        android:text="Themes"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/theme"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/theme"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="150dp"
        android:entries="@array/themes"
        app:layout_constraintLeft_toRightOf="@+id/text_theme"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_language"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="0dp"
        android:text="Ngôn ngữ"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/language"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/language"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="200dp"
        android:entries="@array/language"
        app:layout_constraintLeft_toRightOf="@+id/text_language"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/save_settings"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/border_login_blue"
        android:gravity="center"
        android:text="Lưu"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>